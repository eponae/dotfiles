[core]
	editor = vi
	autocrlf = input
	excludesfile = ~/.gitignore_global
	ignorecase = false

[color]
	ui = true

[push]
	default = current

[alias]
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	tidy = rebase -i @{u}

[log]
	abbrevCommit = true

[credential]
	helper = cache --timeout=28800

[fetch]
	prune = true

[pull]
	rebase = preserve
